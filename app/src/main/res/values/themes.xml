<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主题：使用Theme.AppCompat.NoActionBar，兼容API 24+ -->
    <style name="Theme.YanbaoCamera" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/yanbao_black</item>
        <item name="android:navigationBarColor">@color/yanbao_black</item>
        <item name="android:windowBackground">@color/yanbao_black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- 启动页主题：全屏无状态栏，透明系统栏 -->
    <style name="Theme.YanbaoCamera.Splash" parent="Theme.YanbaoCamera">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
