<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 主题：使用Theme.AppCompat.NoActionBar，兼容API 24+ -->
    <style name="Theme.YanbaoCamera" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/yanbao_black</item>
        <item name="android:navigationBarColor">@color/yanbao_black</item>
        <item name="android:windowBackground">@color/yanbao_black</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- 启动页主题：Edge-to-edge全屏显示，粉紫背景 -->
    <style name="Theme.YanbaoCamera.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- 背景色设为粉紫色 -->
        <item name="android:windowBackground">#E8B4F5</item>
        <!-- 透明状态栏和导航栏 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 启用绘制系统栏背景 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
